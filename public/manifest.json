{
    "name": "Revornix Extension",
    "description": "The chrome extension for Revornix.",
    "version": "0.0.1",
    "manifest_version": 3,
    "options_page": "src/pages/options/index.html",
    "action": {
        "default_popup": "src/pages/popup/index.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "scripting",
        "tabs",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "128": "icon.png"
    }
}